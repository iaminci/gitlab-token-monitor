# Required
export GITLAB_URL="https://your-gitlab.com"
export GITLAB_ADMIN_TOKEN="your-admin-token"
export FROM_EMAIL="alerts@yourcompany.com"
export TO_EMAILS="admin@yourcompany.com"

# SMTP Settings
export SMTP_SERVER="smtp.gmail.com"
export SMTP_PORT="465"
export SMTP_USERNAME="your-email@gmail.com"
export SMTP_PASSWORD="your-password"
export SMTP_USE_SSL="true"

# Optional
export DAYS_THRESHOLD="7"
export SEND_ALL_TOKENS="false"
export INCLUDE_PROJECT_TOKENS="true"   
export INCLUDE_GROUP_TOKENS="true"